---
import Image from "astro/components/Image.astro";
import { Card, CardContent, CardHeader, CardTitle } from "../ui/card";
// import { TotalExpenseChart } from "./TotalExpenseChart";
import TotalExpenseChart from "@assets/chart.png?url";
---

<Card className="grid grid-cols-[1fr_auto] border-none">
  <div class="flex flex-col gap-y-3">
    <CardHeader
      ><CardTitle className="text-base">Total Expense</CardTitle></CardHeader
    >
    <CardContent>
      <p class="text-3xl font-semibold">
        {
          Intl.NumberFormat("en-EN", {
            style: "currency",
            currency: "USD",
            maximumFractionDigits: 0,
          }).format(350_240)
        }
      </p></CardContent
    >
  </div>
  <!-- <TotalExpenseChart client:visible /> -->

  <div class="p-6">
    <Image
      src={TotalExpenseChart}
      alt="TotalExpenseChart"
      class="!flex-shrink-0"
      width={100}
      height={100}
    />
  </div>
</Card>
