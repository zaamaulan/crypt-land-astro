---
import { Card } from "./ui/card";
import { SpendOverviewChart } from "@/components/dashboard/SpendOverviewChart.tsx";

import FinancialSummary from "./dashboard/FinancialSummary.astro";
import PerformanceMetrics from "./dashboard/PerformanceMetrics.astro";
---

<div class="relative mx-auto w-full max-w-screen-2xl">
  <Card className="rounded-[26px] border-none bg-blue-700 !p-4">
    <Card className="flex flex-col gap-y-6 p-6">
      <PerformanceMetrics />
      <div class="flex gap-x-6">
        <Card className="flex p-6">
          <FinancialSummary />
        </Card>
        <SpendOverviewChart client:load />
      </div>
    </Card>
  </Card>
</div>
